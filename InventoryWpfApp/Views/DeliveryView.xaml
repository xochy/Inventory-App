<UserControl x:Class="InventoryWpfApp.Views.DeliveryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InventoryWpfApp.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="600">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Register Inventory Delivery" FontSize="20" FontWeight="Bold" Margin="0,0,0,20" Grid.Row="0" Grid.ColumnSpan="2"/>

        <TextBlock Text="Employee:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,5,10,5"/>
        <ComboBox ItemsSource="{Binding Employees}" SelectedValue="{Binding SelectedEmployeeId}"
                  DisplayMemberPath="Name" SelectedValuePath="EmployeeId"
                  Grid.Row="1" Grid.Column="1" Margin="0,5,0,5" Padding="5"/>

        <TextBlock Text="Product:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="0,5,10,5"/>
        <ComboBox ItemsSource="{Binding Products}" SelectedValue="{Binding SelectedProductId}"
                  DisplayMemberPath="Name" SelectedValuePath="ProductId"
                  Grid.Row="2" Grid.Column="1" Margin="0,5,0,5" Padding="5"/>

        <TextBlock Text="Available Size:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Margin="0,5,10,5"/>
        <ComboBox ItemsSource="{Binding AvailableSizes}" SelectedValue="{Binding SelectedInventoryStockId}"
                  DisplayMemberPath="SizeValue" SelectedValuePath="InventoryStockId"
                  Grid.Row="3" Grid.Column="1" Margin="0,5,0,5" Padding="5"/>

        <TextBlock Text="Quantity to Deliver:" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Margin="0,5,10,5"/>
        <TextBox Text="{Binding QuantityToDeliver, UpdateSourceTrigger=PropertyChanged}" Grid.Row="4" Grid.Column="1" Margin="0,5,0,5" Padding="5"/>

        <StackPanel Orientation="Horizontal" Grid.Row="5" Grid.ColumnSpan="2" HorizontalAlignment="Center" Margin="0,20,0,10">
            <Button Content="Register Delivery" Command="{Binding RegisterDeliveryCommand}" Margin="5" Padding="12"/>
            <Button Content="Clear Fields" Command="{Binding ClearDeliveryFieldsCommand}" Margin="5" Padding="12"/>
        </StackPanel>

        <TextBlock Text="{Binding Message}" Grid.Row="6" Grid.ColumnSpan="2" Margin="0,10,0,0"
                   HorizontalAlignment="Center" Foreground="Blue" TextWrapping="Wrap"/>
    </Grid>
</UserControl>
