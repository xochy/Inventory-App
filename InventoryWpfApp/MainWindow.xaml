<Window x:Class="InventoryWpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InventoryWpfApp"
        mc:Ignorable="d"
       Title="Sistema de Gestión de Inventario (Prueba Técnica)" Height="700" Width="900" Loaded="MainWindow_Loaded">
    <Grid>
        <TabControl Margin="10">
            <TabItem Header="Catálogos">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="5" Padding="10" Margin="0,0,10,10" Grid.Row="0" Grid.Column="0">
                        <StackPanel>
                            <TextBlock Text="Agregar Empleado" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="Nombre del Empleado:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,5,10,5"/>
                                <TextBox x:Name="txtEmployeeName" Grid.Row="0" Grid.Column="1" Margin="0,5,0,5" Padding="5"/>

                                <TextBlock Text="Grupo:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,5,10,5"/>
                                <ComboBox x:Name="cmbGroup" Grid.Row="1" Grid.Column="1" Margin="0,5,0,5" Padding="5"/>
                            </Grid>
                            <Button x:Name="btnAddEmployee" Content="Agregar Empleado" Margin="0,15,0,10" Padding="10" Click="btnAddEmployee_Click"/>
                            <TextBlock x:Name="tblEmployeeMessage" Text="" TextWrapping="Wrap" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="5" Padding="10" Margin="10,0,0,10" Grid.Row="0" Grid.Column="1">
                        <StackPanel>
                            <TextBlock Text="Agregar Producto" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="Nombre del Producto:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,5,10,5"/>
                                <TextBox x:Name="txtProductName" Grid.Row="0" Grid.Column="1" Margin="0,5,0,5" Padding="5"/>

                                <TextBlock Text="Descripción:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,5,10,5"/>
                                <TextBox x:Name="txtProductDescription" Grid.Row="1" Grid.Column="1" Margin="0,5,0,5" Padding="5"/>

                                <TextBlock Text="Aplica a:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="0,5,10,5"/>
                                <ComboBox x:Name="cmbApplicabilityType" Grid.Row="2" Grid.Column="1" Margin="0,5,0,5" Padding="5">
                                    <ComboBoxItem Content="Administrativo"/>
                                    <ComboBoxItem Content="Sindicalizado"/>
                                    <ComboBoxItem Content="Todos"/>
                                </ComboBox>
                            </Grid>
                            <Button x:Name="btnAddProduct" Content="Agregar Producto" Margin="0,15,0,10" Padding="10" Click="btnAddProduct_Click"/>
                            <TextBlock x:Name="tblProductMessage" Text="" TextWrapping="Wrap" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="5" Padding="10" Margin="0,10,10,10" Grid.Row="1" Grid.Column="0">
                        <StackPanel>
                            <TextBlock Text="Agregar Talla" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="Valor de Talla:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,5,10,5"/>
                                <TextBox x:Name="txtSizeValue" Grid.Row="0" Grid.Column="1" Margin="0,5,0,5" Padding="5"/>

                                <TextBlock Text="Tipo de Notación:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,5,10,5"/>
                                <ComboBox x:Name="cmbNotationType" Grid.Row="1" Grid.Column="1" Margin="0,5,0,5" Padding="5">
                                    <ComboBoxItem Content="Americana"/>
                                    <ComboBoxItem Content="Mexicana"/>
                                    <ComboBoxItem Content="Europea"/>
                                    <ComboBoxItem Content="Unica"/>
                                </ComboBox>
                            </Grid>
                            <Button x:Name="btnAddSize" Content="Agregar Talla" Margin="0,15,0,10" Padding="10" Click="btnAddSize_Click"/>
                            <TextBlock x:Name="tblSizeMessage" Text="" TextWrapping="Wrap" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="5" Padding="10" Margin="10,10,0,10" Grid.Row="1" Grid.Column="1">
                        <StackPanel>
                            <TextBlock Text="Añadir Stock Inicial a Producto-Talla" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="Producto:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,5,10,5"/>
                                <ComboBox x:Name="cmbStockProduct" Grid.Row="0" Grid.Column="1" Margin="0,5,0,5" Padding="5" SelectionChanged="cmbStockProduct_SelectionChanged"/>

                                <TextBlock Text="Talla:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,5,10,5"/>
                                <ComboBox x:Name="cmbStockSize" Grid.Row="1" Grid.Column="1" Margin="0,5,0,5" Padding="5"/>

                                <TextBlock Text="Cantidad Inicial:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="0,5,10,5"/>
                                <TextBox x:Name="txtInitialQuantity" Grid.Row="2" Grid.Column="1" Margin="0,5,0,5" Padding="5"/>

                                <TextBlock Text="Stock Mínimo:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Margin="0,5,10,5"/>
                                <TextBox x:Name="txtMinStock" Grid.Row="3" Grid.Column="1" Margin="0,5,0,5" Padding="5"/>
                            </Grid>
                            <Button x:Name="btnAddInitialStock" Content="Añadir Stock" Margin="0,15,0,10" Padding="10" Click="btnAddInitialStock_Click"/>
                            <TextBlock x:Name="tblStockMessage" Text="" TextWrapping="Wrap" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>

            <TabItem Header="Entregas de Inventario">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Registrar Entrega de Artículo" FontSize="18" FontWeight="Bold" Margin="0,0,0,15" Grid.Row="0" Grid.ColumnSpan="2"/>

                    <TextBlock Text="Empleado:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,5,10,5"/>
                    <ComboBox x:Name="cmbDeliveryEmployee" Grid.Row="1" Grid.Column="1" Margin="0,5,0,5" Padding="5" SelectionChanged="cmbDeliveryEmployee_SelectionChanged"/>

                    <TextBlock Text="Producto:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="0,5,10,5"/>
                    <ComboBox x:Name="cmbDeliveryProduct" Grid.Row="2" Grid.Column="1" Margin="0,5,0,5" Padding="5" SelectionChanged="cmbDeliveryProduct_SelectionChanged"/>

                    <TextBlock Text="Talla Disponible:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Margin="0,5,10,5"/>
                    <ComboBox x:Name="cmbDeliverySize" Grid.Row="3" Grid.Column="1" Margin="0,5,0,5" Padding="5"/>

                    <TextBlock Text="Cantidad a Entregar:" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Margin="0,5,10,5"/>
                    <TextBox x:Name="txtDeliveryQuantity" Grid.Row="4" Grid.Column="1" Margin="0,5,0,5" Padding="5"/>

                    <Button x:Name="btnRegisterDelivery" Content="Registrar Entrega" Grid.Row="5" Grid.ColumnSpan="2" Margin="0,20,0,10" Padding="12" Click="btnRegisterDelivery_Click"/>

                    <TextBlock x:Name="tblDeliveryMessage" Text="" TextWrapping="Wrap" HorizontalAlignment="Center" Grid.Row="6" Grid.ColumnSpan="2"/>
                </Grid>
            </TabItem>

            <TabItem Header="Historial de Movimientos">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Historial de Movimientos de Almacén" FontSize="18" FontWeight="Bold" Margin="0,0,0,15" Grid.Row="0"/>
                    <DataGrid x:Name="dgMovements" Grid.Row="1" AutoGenerateColumns="True" IsReadOnly="True" Margin="0,0,0,10"/>
                    <Button x:Name="btnRefreshMovements" Content="Actualizar Historial" Grid.Row="2" Padding="10" HorizontalAlignment="Left" Click="btnRefreshMovements_Click"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
